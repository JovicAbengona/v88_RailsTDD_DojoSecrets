<div class="container">
    <form action="/users" method="POST" class="col-lg-6 col-xs-12 mt-5 row">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="col-md-12 mb-3">
            <h5 class="display-5 text-danger">Register An Account</h5>
        </div>
        <div class="col-md-12 mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="user[name]" id="name">
        </div>
        <div class="col-md-12 mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" name="user[email]" id="email">
        </div>
        <div class="col-md-6 mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="user[password]" id="password">
        </div>
        <div class="col-md-6 mb-3">
            <label for="confirm_password" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" name="user[confirm_password]" id="confirm_password">
        </div>
        <div class="col-12 mb-3">
            <button type="submit" class="btn btn-danger">Register</button>
            <a href="/" class="d-block mt-2 fst-italic small text-danger">Already have an account? Log in here!</a>
        </div>
    </form>
</div>